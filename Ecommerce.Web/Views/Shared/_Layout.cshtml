<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>E-commerce - [@ViewData["Title"]]</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="@Url.Content("~/plugins/fontawesome-free/css/all.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/plugins/select2/css/select2.css")">
     <!-- Toastr -->
    <link rel="stylesheet" href="@Url.Content("~/plugins/toastr/toastr.min.css")">
    @await RenderSectionAsync("Styles", required: false)
    <!-- Theme style -->

    <link rel="stylesheet" href="@Url.Content("~/dist/css/adminlte.min.css")" type="text/css">        
</head>
<body class="hold-transition sidebar-collapse layout-top-nav">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            <div class="container">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand">
                    <span class="brand-text font-weight-light">E-Commerce</span>
                </a>
                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Category" asp-action="Index" class="nav-link">Kategoriler</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Product" asp-action="Index" class="nav-link">Ürünler</a>
                        </li>
                    </ul>                   
                </div>
            </div>
        </nav>
        <!-- /.navbar -->       
        <!-- Content Wrapper. Contains page content -->
        @RenderBody()     
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Serkan TUNCALI
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2022 <a href="https://github.com/stuncali">S.T</a>.</strong> Tüm hakları saklıdır.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="@Url.Content("~/plugins/jquery/jquery.min.js")" type="text/javascript"></script>
    <!-- Bootstrap 4 -->
    <script src="@Url.Content("~/plugins/bootstrap/js/bootstrap.bundle.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/plugins/select2/js/select2.js")"></script>
    <script src="@Url.Content("~/plugins/select2/js/i18n/tr.js")"></script>
    <!-- Toastr -->
    <script src="@Url.Content("~/plugins/toastr/toastr.min.js")"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            var myTimeOut = setTimeout(
                function () {
                    $('.alert').fadeOut('slow');
                    clearTimeout(myTimeOut);
                }, 6000);         
        });
    </script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/dist/js/adminlte.min.js")" type="text/javascript"></script>
    
</body>
</html>
