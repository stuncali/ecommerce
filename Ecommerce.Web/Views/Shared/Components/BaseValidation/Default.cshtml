@model Ecommerce.Web.Models.BaseViewModel

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class='fa fa-times' aria-hidden='true'></i> </button>
        <h4><i class="icon fa fa-check"></i> Tebrikler!</h4>
        <div>@Html.Raw(TempData["SuccessMessage"])</div>
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class='fa fa-times' aria-hidden='true'></i> </button>
        <h4><i class="icon fa fa-check"></i> Tebrikler!</h4>
        <div>@Html.Raw(TempData["InfoMessage"])</div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class='fa fa-times' aria-hidden='true'></i> </button>
        <h4><i class="icon fa fa-check"></i> Dikkat!</h4>
        <div>@Html.Raw(TempData["ErrorMessage"])</div>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class='fa fa-times' aria-hidden='true'></i> </button>
        <h4><i class="icon fa fa-check"></i> Uyarı!</h4>
        <div>@Html.Raw(TempData["WarningMessage"])</div>
    </div>
}


@if (!String.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class='fa fa-times' aria-hidden='true'></i> </button>
        <h4><i class="icon fa fa-check"></i> Tebrikler!</h4>
        <div>@Html.Raw(Model.SuccessMessage)</div>
    </div>
}

@if (Model.WarningMessages.Count > 0)
{
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class='fa fa-times' aria-hidden='true'></i> </button>
        <h4><i class="icon fa fa-check"></i> Uyarı!</h4>
        @foreach (var message in Model.WarningMessages)
        {
            <div>@message</div>
        }
    </div>
}

@if (Model.ErrorMessages.Count > 0)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class='fa fa-times' aria-hidden='true'></i> </button>
        <h4><i class="icon fa fa-check"></i> Hata!</h4>
        @foreach (var message in Model.ErrorMessages)
        {
            <div>@message</div>
        }
    </div>
}

